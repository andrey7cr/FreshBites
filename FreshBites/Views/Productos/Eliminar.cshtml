@model FreshBites.Models.Producto
@{
    ViewData["Title"] = "Eliminar producto";
}

@if (User.IsInRole("Administrador"))
{
    <div class="container mt-5">
        <div class="card shadow p-4 bg-white bg-opacity-75">
            <h2 class="text-danger mb-4">🗑 Eliminar producto</h2>
            <h5>¿Estás seguro de que querés eliminar este producto?</h5>

            <dl class="row mt-3">
                <dt class="col-sm-3">Nombre</dt>
                <dd class="col-sm-9">@Model.Nombre</dd>

                <dt class="col-sm-3">Descripción</dt>
                <dd class="col-sm-9">@Model.Descripcion</dd>

                <dt class="col-sm-3">Precio</dt>
                <dd class="col-sm-9">₡@Model.Precio.ToString("N2")</dd>
            </dl>

            <form asp-action="Eliminar">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Confirmar</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </form>
        </div>
    </div>
}
else
{
    <div class="alert alert-danger mt-5 text-center">
        Acceso denegado. Esta acción es solo para administradores.
    </div>
}
